<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_3c3f41"
    android:orientation="horizontal">
    <!--    android:gravity="center_horizontal"-->
    <!--    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--    android:layout_height="@dimen/size_dp_60"-->
    <RelativeLayout
        android:id="@+id/list_item_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_2b2b2b"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:paddingBottom="12dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_dp_10"
            android:background="@color/color_2b2b2b"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:textColor="@android:color/white">

            <ImageView
                android:id="@+id/signal_image"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/signal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_dp_3"
                android:background="@color/color_2b2b2b"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_sp_12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/device_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_dp_30"
            android:layout_toRightOf="@id/first"
            android:background="@color/color_2b2b2b"
            android:orientation="vertical"
            android:textColor="@android:color/white">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_2b2b2b"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_sp_16" />

            <TextView
                android:id="@+id/mac_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_dp_3"
                android:background="@color/color_2b2b2b"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_sp_14" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/color_2b2b2b"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_dp_30"
            android:orientation="vertical"
            android:textColor="@android:color/white">

            <TextView
                android:id="@+id/connect_text"
                android:text="@string/disconnected_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_2b2b2b"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_sp_16" />

        </LinearLayout>

        <TextView
            android:id="@+id/type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_dp_10"
            android:background="@color/color_2b2b2b"
            android:textColor="@android:color/white" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_disconnect"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/color_disconnect"
        android:gravity="center"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="@string/disconnect_device"
        android:textColor="#FFFFFFFF"
        android:visibility="gone"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/tv_connect"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/color_connect"
        android:gravity="center"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="@string/connect_device"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"/>
<!--        android:visibility="gone"-->

</LinearLayout>