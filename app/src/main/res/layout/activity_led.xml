<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_2b2b2b">

    <include layout="@layout/toolbar_title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_dp_7"
        android:layout_marginTop="@dimen/size_dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hues"
            android:textSize="@dimen/text_size_sp_16"
            android:layout_marginRight="@dimen/size_dp_3"
            android:textColor="@android:color/white"/>

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/hues_seekbar"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            app:isb_indicator_color="@android:color/holo_red_light"
            app:isb_indicator_text_size="@dimen/text_size_sp_16"
            app:isb_indicator_type="rectangle"
            app:isb_max="360"
            app:isb_min="0"
            app:isb_show_indicator="false"
            app:isb_thumb_color="@android:color/holo_red_light"
            app:isb_thumb_width="@dimen/size_dp_15"
            app:isb_track_progress_bar_color="@android:color/holo_red_light" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/huesValue"
            android:textSize="@dimen/text_size_sp_16"
            android:layout_marginRight="@dimen/size_dp_5"
            android:gravity="center_vertical|left"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_dp_7"
        android:layout_marginTop="@dimen/size_dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saturation"
            android:textSize="@dimen/text_size_sp_16"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/size_dp_3"/>
        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/saturation_seekbar"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            app:isb_indicator_type="rectangle"
            app:isb_indicator_text_size="@dimen/text_size_sp_16"
            app:isb_thumb_width="@dimen/size_dp_15"
            app:isb_max="100"
            app:isb_min="1"
            app:isb_show_indicator="false"
            app:isb_indicator_color="@android:color/holo_green_light"
            app:isb_thumb_color="@android:color/holo_green_light"
            app:isb_track_progress_bar_color="@android:color/holo_green_light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/saturationValue"
            android:textSize="@dimen/text_size_sp_16"
            android:layout_marginRight="@dimen/size_dp_5"
            android:gravity="center_vertical|left"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_dp_7"
        android:layout_marginTop="@dimen/size_dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brightness"
            android:textSize="@dimen/text_size_sp_16"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/size_dp_3"/>
        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/brightness_seekbar"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            app:isb_indicator_type="rectangle"
            app:isb_indicator_text_size="@dimen/text_size_sp_16"
            app:isb_thumb_width="@dimen/size_dp_15"
            app:isb_max="100"
            app:isb_min="1"
            app:isb_show_indicator="false"
            app:isb_indicator_color="@android:color/holo_blue_light"
            app:isb_thumb_color="@android:color/holo_blue_light"
            app:isb_track_progress_bar_color="@android:color/holo_blue_light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/brightnessValue"
            android:textSize="@dimen/text_size_sp_16"
            android:layout_marginRight="@dimen/size_dp_5"
            android:gravity="center_vertical|left"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_dp_7"
        android:layout_marginTop="@dimen/size_dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colorTemperature"
            android:textSize="@dimen/text_size_sp_16"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/size_dp_3"/>
        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/colorTemperature_seekbar"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            app:isb_indicator_type="rectangle"
            app:isb_indicator_text_size="@dimen/text_size_sp_16"
            app:isb_thumb_width="@dimen/size_dp_15"
            app:isb_max="75"
            app:isb_min="32"
            app:isb_show_indicator="false"
            app:isb_indicator_color="@android:color/holo_blue_light"
            app:isb_thumb_color="@android:color/holo_blue_light"
            app:isb_track_progress_bar_color="@android:color/holo_blue_light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cctValue"
            android:textSize="@dimen/text_size_sp_16"
            android:layout_marginRight="@dimen/size_dp_5"
            android:gravity="center_vertical|left"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_dp_7"
        android:layout_marginTop="@dimen/size_dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lightEffect"
            android:textSize="@dimen/text_size_sp_16"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/size_dp_3"/>
        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/effect_seekbar"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            app:isb_indicator_type="rectangle"
            app:isb_indicator_text_size="@dimen/text_size_sp_16"
            app:isb_tick_num="1"
            app:isb_thumb_width="@dimen/size_dp_15"
            app:isb_max="100"
            app:isb_min="0"
            app:isb_show_indicator="false"
            app:isb_indicator_color="@android:color/holo_blue_light"
            app:isb_thumb_color="@android:color/holo_blue_light"
            app:isb_track_progress_bar_color="@android:color/holo_blue_light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/effectValue"
            android:textSize="@dimen/text_size_sp_16"
            android:layout_marginRight="@dimen/size_dp_5"
            android:gravity="center_vertical|left"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/speedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_dp_7"
        android:layout_marginTop="@dimen/size_dp_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speed"
            android:textSize="@dimen/text_size_sp_16"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/size_dp_3"/>
        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/speed_seekbar"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            app:isb_indicator_type="rectangle"
            app:isb_indicator_text_size="@dimen/text_size_sp_16"
            app:isb_thumb_width="@dimen/size_dp_15"
            app:isb_max="20"
            app:isb_min="1"
            app:isb_show_indicator="false"
            app:isb_indicator_color="@android:color/holo_blue_light"
            app:isb_thumb_color="@android:color/holo_blue_light"
            app:isb_track_progress_bar_color="@android:color/holo_blue_light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/speedValue"
            android:textSize="@dimen/text_size_sp_16"
            android:layout_marginRight="@dimen/size_dp_5"
            android:gravity="center_vertical|left"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>