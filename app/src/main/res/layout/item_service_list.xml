<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_3c3f41"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/list_item_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_2b2b2b"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:paddingBottom="12dp"
        android:paddingEnd="16dp"
        android:paddingStart="1dp"
        android:paddingTop="12dp">
        <LinearLayout
            android:id="@+id/icon_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_dp_1"
            android:background="@color/color_2b2b2b"
            android:orientation="vertical"
            android:textColor="@android:color/white">
            <ImageView
                android:id="@+id/groupIcon"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:contentDescription="TODO"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_dp_5"
            android:layout_toRightOf="@id/icon_id"
            android:background="@color/color_2b2b2b"
            android:orientation="vertical"
            android:textColor="@android:color/white">

            <TextView
                android:id="@+id/service_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_2b2b2b"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_sp_16"
                android:text="Device_name"/>

            <TextView
                android:id="@+id/service_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_dp_3"
                android:background="@color/color_2b2b2b"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_sp_14"
                android:text="1212121-12121"/>
            <TextView
                android:id="@+id/service_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_dp_3"
                android:background="@color/color_2b2b2b"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_sp_14"
                android:text="primary_service"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>