<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_3c3f41"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/list_item_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_2b2b2b"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="5dp"
        android:paddingBottom="12dp"
        android:textColor="@android:color/white">

        <LinearLayout
            android:id="@+id/characteristic_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_dp_30"
            android:background="@color/color_2b2b2b"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/characteristic_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_2b2b2b"
                android:textColor="@color/green_500"
                android:textSize="@dimen/text_size_sp_16" />

            <TextView
                android:id="@+id/characteristic_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_dp_3"
                android:background="@color/color_2b2b2b"
                android:textColor="@color/green_500"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:id="@+id/properties_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_dp_3"
                android:background="@color/color_2b2b2b"
                android:textColor="@color/green_500"
                android:textSize="@dimen/text_size_sp_12" />


        </LinearLayout>
        <LinearLayout  android:id="@+id/updown_info"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_dp_50"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@color/color_2b2b2b"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/download_view"
                android:layout_width="@dimen/size_dp_20"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_dp_10"
                android:background="@mipmap/icon_download"/>
            <ImageView
                android:id="@+id/upload_view"
                android:layout_width="@dimen/size_dp_20"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_dp_10"
                android:background="@mipmap/icon_upload"/>
            <ImageView
                android:id="@+id/notify_view"
                android:layout_width="@dimen/size_dp_20"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_notify"
                app:tint="@color/grey_500" />
<!--                android:tint="@color/yellow_600""-->
<!--                android:background="@mipmap/icon_notify"-->
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>