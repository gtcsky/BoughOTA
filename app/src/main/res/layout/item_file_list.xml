<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_3c3f41"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_3c3f41">

        <TextView
            android:id="@+id/file_name_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_50"
            android:background="@color/color_2b2b2b"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_sp_16"
            android:paddingLeft="@dimen/size_dp_20"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="@dimen/size_dp_60"
        android:layout_height="match_parent"
        android:background="#FFF55030"
        android:gravity="center"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="@string/file_delete"
        android:textColor="#FFFFFFFF"
        android:visibility="gone"
        android:textSize="14sp"/>
</LinearLayout>